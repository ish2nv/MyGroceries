<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rowbgselector"
    tools:context=".itempaid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/lin2500"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView0003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/groceryimg" />

        <TextView
            android:id="@+id/textView902"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/edittextsize"
            android:text="No items to display" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview392"
        android:layout_below="@+id/lin2500"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin83225"
        android:background="@color/ic_launcher_background"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView756"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subitemsize"
            android:gravity="end"
            android:layout_marginRight="11dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>